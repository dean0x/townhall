{
  "name": "@townhall/cli",
  "version": "1.0.0",
  "description": "Git-inspired CLI for structured agent debate simulations",
  "main": "dist/index.js",
  "bin": {
    "townhall": "dist/index.js"
  },
  "scripts": {
    "build": "tsup src/interfaces/cli/index.ts --dts --format cjs --target node20 --out-dir dist",
    "dev": "tsx src/interfaces/cli/index.ts",
    "test": "vitest --no-file-parallelism",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "debate",
    "simulation",
    "agent",
    "cli",
    "argument",
    "reasoning"
  ],
  "author": "Townhall Team",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@types/node": "^24.5.2",
    "commander": "^14.0.1",
    "neverthrow": "^8.2.0",
    "reflect-metadata": "^0.2.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "tsyringe": "^4.10.0",
    "typescript": "^5.9.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}
